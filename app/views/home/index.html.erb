<div class="w-full h-max">

  <div class="w-full h-97 grid grid-cols-5 gap-4 p-4">
    <!--DATA AND CONFIGURATION-->
    <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 h-full">
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Data and configuration</h5>
        
      <div class="relative overflow-x-auto shadow-md sm:rounded-lg pt-5 pb-5">
          <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
              <tbody>
                  <tr class="border-b border-gray-200 dark:border-gray-700">
                      <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap bg-gray-50 dark:text-white dark:bg-gray-800">
                          Leader
                      </th>
                      <td class="px-6 py-4">
                          <% if @leader.present? %>
                            Node<%=@leader.id%>
                          <% else %>
                            No Data
                          <% end %>
                      </td>
                  </tr>
                  <tr class="border-b border-gray-200 dark:border-gray-700">
                      <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap bg-gray-50 dark:text-white dark:bg-gray-800">
                          Errors
                      </th>
                      <td class="px-6 py-4">
                          No Data
                      </td>
                  </tr>
              </tbody>
          </table>
      </div>

      <%= form_with(model: @node, class: "w-full") do |form| %>
        <%= form.button :submit, class:"rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium w-full" %>
      <% end %>
    </div>

    <!--LEADER-->
    <% if @leader.present? %>
      <div class="col-span-4"><%= render @leader %></div>
    <% else %>
      <div class="col-span-4 p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 flex flex-col h-96">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Without leader</h5>
        <div class="bg-gray-700 mt-3 p-4 h-5/6">
          <p class="text-white">No Data</p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="w-full px-4">

    <!--FOLLOWERS AND CANDIDATES-->
    <div class="flex mt-5 grid grid-cols-3 gap-4">
      <% @nodes.each do |node| %>
        <%= render node %>
      <% end %>
    </div>
  </div>
</div>
            