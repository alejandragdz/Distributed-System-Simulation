<div class="flex flex-row grid-cols-2 gap-4 w-full h-max">
  <div class="max-w-lg p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 h-full">
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Data and configuration</h5>
        
      <div class="relative overflow-x-auto shadow-md sm:rounded-lg pt-5 pb-5">
          <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
              <tbody>
                  <tr class="border-b border-gray-200 dark:border-gray-700">
                      <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap bg-gray-50 dark:text-white dark:bg-gray-800">
                          Leader
                      </th>
                      <td class="px-6 py-4">
                          <% if @leader.present? %>
                            Node<%=@leader.id%>
                          <% else %>
                            No Data
                          <% end %>
                      </td>
                  </tr>
                  <tr class="border-b border-gray-200 dark:border-gray-700">
                      <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap bg-gray-50 dark:text-white dark:bg-gray-800">
                          Errors
                      </th>
                      <td class="px-6 py-4">
                          No Data
                      </td>
                  </tr>
              </tbody>
          </table>
      </div>

      <%= form_with(model: @node, class: "w-full") do |form| %>
        <%= form.button :submit, class:"rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium w-full" %>
      <% end %>
  </div>

  <div class="border rounded-md w-full p-5">

    <!--LEADER-->
    <% if @leader.present? %>
      <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 w-full relative ">
        <div class="absolute top-0 right-0 p-3 rounded-md bg-zinc-400 flex flex-row grid-cols-2">
          <svg xmlns="http://www.w3.org/2000/svg" height="14" width="15.75" viewBox="0 0 576 512"><path fill="#FFD43B" d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z"/></svg>
          <p class="pl-5">Node Leader</p>
        </div>
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Node<%=@leader.id%></h5>
        <div class="bg-gray-700 mt-3 p-4">
          <p class="text-white">Logs: </p>
        </div>
      </div>
    <% else %>
      <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 w-full relative ">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Without leader</h5>
        <div class="bg-gray-700 mt-3 p-4 border">
          <p class="text-white">No Data</p>
        </div>
      </div>
    <% end %>

    <!--FOLLOWERS AND CANDIDATES-->
    <div class="mt-5 grid grid-cols-4 gap-4">
      <% @nodes.each do |node| %>
        <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 relative ">
          <% if node.status == 2 %>
            <div class="absolute top-0 right-0 p-3 rounded-md bg-zinc-400 flex flex-row grid-cols-2">
              <svg xmlns="http://www.w3.org/2000/svg" height="14" width="15.75" viewBox="0 0 576 512"><path fill="#96d35f" d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z"/></svg>
              <p class="pl-5">Node Candidate</p>
            </div>
          <% end %>
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Node<%=node.id%></h5>
          <div class="bg-gray-700 mt-3 p-4">
            <p class="text-white">Logs: </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
            